<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#94ffd343">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created with"
        android:id="@+id/textView15"
        android:textColor="#545454"
        android:gravity="left|center"
        android:layout_alignTop="@+id/text20"
        android:layout_alignLeft="@+id/contractID"
        android:layout_alignStart="@+id/contractID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/contractID"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/text17"
        android:layout_toStartOf="@+id/text17"
        android:gravity="left"
        android:textSize="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Amount"
        android:id="@+id/text17"
        android:gravity="center"
        android:textColor="#ff0000"
        android:layout_alignTop="@+id/contractID"
        android:layout_toLeftOf="@+id/text20"
        android:layout_toStartOf="@+id/text20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="to be paid"
        android:id="@+id/amount"
        android:layout_below="@+id/text17"
        android:layout_alignLeft="@+id/text17"
        android:layout_alignStart="@+id/text17"
        android:gravity="center"
        android:textColor="#b52121" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#db000000"
        android:paddingTop="10dp"
        android:layout_below="@+id/amount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=">"
        android:id="@+id/text20"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5sp"
        android:layout_alignBottom="@+id/view2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/event_naa"
        android:layout_below="@+id/amount"
        android:layout_alignLeft="@+id/contractID"
        android:layout_alignStart="@+id/contractID"
        android:textSize="15sp" />

</RelativeLayout>