<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Expense"
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_alignParentTop="true"

        android:layout_marginLeft="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Amount owed"
        android:id="@+id/textView7"
        android:gravity="center"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="10dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/amt"
        android:gravity="center"
        android:layout_above="@+id/status"
        android:layout_alignLeft="@+id/ename"
        android:layout_alignStart="@+id/ename"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/ename"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/status"
        android:layout_toEndOf="@+id/status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Status"
        android:id="@+id/status"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="16dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:typeface="monospace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Owed To"
        android:id="@+id/textView5"
        android:gravity="center"
        android:layout_alignTop="@+id/status"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="30dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/textView6"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:textColor="#000000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/rname"
        android:gravity="center"
        android:hint="Friend Name"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/status"
        android:layout_toEndOf="@+id/status" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/date"
        android:gravity="center"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignRight="@+id/rname"
        android:layout_alignEnd="@+id/rname"
        android:layout_alignLeft="@+id/rname"
        android:layout_alignStart="@+id/rname" />


    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/inputamount"
        android:hint="You can pay in installments"
        android:gravity="center_vertical|center_horizontal"
        android:drawableLeft="@drawable/dollar"
        android:textSize="15dp"
        android:layout_above="@+id/paybuttonfinal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please select a Payment Method"
        android:id="@+id/textView13"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="40dp"
        android:focusableInTouchMode="false"
        android:typeface="monospace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView19"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView13" />

    <ImageButton
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton"
        android:scaleType="fitCenter"
        android:cropToPadding="false"
        android:layout_weight="1"
        android:layout_below="@+id/myRadioGroup"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff"
        android:layout_above="@+id/inputamount"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:id="@+id/paybuttonfinal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_alignRight="@+id/inputamount"
        android:layout_alignEnd="@+id/inputamount"
        android:layout_alignLeft="@+id/inputamount"
        android:layout_alignStart="@+id/inputamount"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/background_light" />

    <RadioGroup
        android:orientation="horizontal"

        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/myRadioGroup"
        android:layout_weight="1"
        android:weightSum="2"
        android:layout_alignTop="@+id/textView19"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/xfers"
            android:text="Xfers"
            android:layout_alignTop="@+id/cash"
            android:layout_toLeftOf="@+id/status"
            android:layout_toStartOf="@+id/status"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:checked="false"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorAccent"
            android:typeface="monospace" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/cash"
            android:text="Cash"
            android:layout_below="@+id/textView19"
            android:layout_alignRight="@+id/linearLayout2"
            android:layout_alignEnd="@+id/linearLayout2"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#bafea117"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorAccent"
            android:checked="false"
            android:typeface="monospace" />
    </RadioGroup>

</RelativeLayout>