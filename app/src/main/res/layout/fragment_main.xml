<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:alpha="0.75"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Event Name (Lunch)"
        android:gravity="center"
        android:height="50sp"
        android:background="@android:color/white"
        android:alpha="0.75"
        android:width="200dp"
        android:layout_below="@+id/section_label"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:minHeight="50sp" />

    <Button
        android:id="@+id/createContract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add date"
        android:layout_marginBottom="40dp"
        android:background="@drawable/oval_background"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/testbutton"
        android:layout_alignEnd="@+id/testbutton"
        android:layout_alignLeft="@+id/testbutton"
        android:layout_alignStart="@+id/testbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Split"
        android:id="@+id/button2"
        android:background="@drawable/buttonshape3"
        android:textColor="@android:color/black"
        android:alpha="1"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/testbutton"
        android:layout_toEndOf="@+id/testbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search friend"
        android:id="@+id/testbutton"
        android:layout_below="@+id/editText1"
        android:background="@drawable/buttonshape3"
        android:layout_marginTop="15sp"
        android:textColor="@android:color/black"
        android:layout_alignRight="@+id/editText1"
        android:layout_alignEnd="@+id/editText1"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignStart="@+id/editText1"
        android:alpha="1"
        android:gravity="center"
        android:textSize="15sp"
        android:drawableLeft="@drawable/ic_action_search" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_below="@+id/testbutton"
        android:layout_toRightOf="@+id/section_label"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:alpha="0.75"
        android:background="#ffffff"
        android:height="50sp"
        android:minHeight="50sp"
        android:hint="Bill Amount (100)"
        android:gravity="center"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:drawableLeft="@drawable/ic_launcher"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Amount to be paid"
        android:id="@+id/textView"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:textColor="@android:color/white" />

</RelativeLayout>
