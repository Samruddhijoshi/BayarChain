<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                 android:layout_height="match_parent"
            android:fillViewport="true"
   >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aaaa"
    android:alpha="0.75">

    <EditText
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:height="40sp"
        android:padding="10sp"
        android:typeface="monospace"
        android:alpha=".6"
        android:layout_marginBottom="10dp"
        android:lines="1"
        android:autoText="true"
        android:background="#c9ffffff">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="1"

        android:gravity="center_horizontal"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:background="#c9ffffff"
        android:height="40sp"
        android:padding="10sp"
        android:typeface="monospace"
        android:alpha=".6"
        android:layout_marginBottom="10dp"
        android:lines="1" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Password"
        android:maxLines="1"

        android:inputType="textPassword"
        android:layout_below="@+id/username1"
        android:layout_alignLeft="@+id/username1"
        android:layout_alignStart="@+id/username1"
        android:background="#c9ffffff"
        android:height="40sp"
        android:padding="10sp"
        android:typeface="monospace"
        android:alpha=".6"
        android:layout_marginBottom="10dp"
        android:lines="1" />

    <EditText
        android:id="@+id/emailaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="1"

        android:gravity="center_horizontal"
        android:hint="Xfers Email Address"
        android:inputType="textPersonName"
        android:layout_below="@+id/firstName"
        android:layout_alignLeft="@+id/firstName"
        android:layout_alignStart="@+id/firstName"
        android:background="#c9ffffff"
        android:height="40sp"
        android:padding="10sp"
        android:typeface="monospace"
        android:alpha=".6"
        android:layout_marginBottom="10dp"
        android:textIsSelectable="false"
        android:textSize="15dp"
        android:layout_alignRight="@+id/firstName"
        android:layout_alignEnd="@+id/firstName"
        android:lines="1" />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:maxLines="1"

        android:layout_height="wrap_content"
        android:background="@drawable/oval_background"
        android:minWidth="100dp"
        android:text="Sign Up"
        android:layout_below="@+id/contact"
        android:layout_marginTop="35dp"
        android:layout_alignRight="@+id/contact"
        android:layout_alignEnd="@+id/contact"
        android:layout_alignLeft="@+id/contact"
        android:layout_alignStart="@+id/contact"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/background_light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username1"
        android:layout_below="@+id/emailaddress"
        android:layout_alignLeft="@+id/emailaddress"
        android:layout_alignStart="@+id/emailaddress"
        android:layout_alignRight="@+id/emailaddress"
        android:layout_alignEnd="@+id/emailaddress"
        android:hint="Username"
        android:gravity="center"
        android:background="#c9ffffff"
        android:height="40sp"
        android:padding="10sp"
        android:typeface="monospace"
        android:alpha=".6"
        android:layout_marginBottom="10dp"
        android:lines="1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:maxLines="1"

        android:id="@+id/contact"
        android:layout_below="@+id/confirmPassword"
        android:layout_alignLeft="@+id/confirmPassword"
        android:layout_alignStart="@+id/confirmPassword"
        android:alpha="0.6"
        android:background="#c9ffffff"
        android:height="40sp"
        android:minHeight="40sp"
        android:hint="Xfers Contact Number"
        android:phoneNumber="true"
        android:gravity="center_vertical|center_horizontal"
        android:lines="1" />

</RelativeLayout>
</ScrollView>